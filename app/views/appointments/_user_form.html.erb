<div class="mb-3">
  <%= form.label :name, style: "display: block", class: "text-dark fw-semibold mb-1" %>
  <%= form.text_field :name,
                      class: "form-control form-control-lg",
                      placeholder: t('enter_name'), pattern: "[A-Za-z ]+",
                      required: true,
                      oninvalid: "this.setCustomValidity('Name can only contain letters and spaces')",
                      onchange: "this.setCustomValidity('')" %>
</div>

<div class="mb-3">
  <%= form.label :email, style: "display: block", class: "text-dark fw-semibold mb-1" %>
  <%= form.email_field :email, type: :email, class: "form-control form-control-lg", placeholder: t('enter_email'), required: true %>
</div>

<div class="grid gap-1 mb-3">
  <h5 class="g-col-12 text-dark fw-semibold mb-1"><%= t('select_currency') %></h5>
  <% %w[INR USD EUR].each_with_index do |c, i| %>
    <%= form.radio_button :currency, c, class: "btn-check", checked: i == 0 %>
    <%= form.label t('currency_downcase', downcase: c.downcase), c, class: "g-col-4 btn currency-select fs-6" %>
  <% end %>
</div>

<div class="mb-3">
  <%= form.button t('pay_now'),
                  type: "submit",
                  class: "mt-3 btn btn-lg btn-primary text-white w-100 p-3 py-2 rounded-2",
                  "data-appointment-target": "payButton" %>
</div>
