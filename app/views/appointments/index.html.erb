<h3 class="h3 fw-bold lh-base text-center mb-4"><%= t('my_appointments') %></h3>

<% if @appointments.present? %>
  <div id="appointments" class="grid mb-3">
      <%= render @appointments %>
  </div>
<% else %>
  <h4 class="h4 text-center text-info mt-5"><%= t('appointments_page.no_appointments_message') %></h4>
<% end %>
