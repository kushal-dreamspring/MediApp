<div data-controller="appointment">
  <%= form_with model: @appointment, method: :post do |form| %>
    <%= form.hidden_field :doctor_id, value: params[:doctor_id] %>
    <%= form.hidden_field :user_id, value: 0 %>

    <section class="my-5">
      <h6 class="fw-semibold">
        <%= image_tag 'calendar-2.svg' %>
        <span class="h-100 px-2 align-baseline">Select a date</span>
      </h6>

      <div id="dateCarousel" class="carousel slide">
        <button class="carousel-control-prev" type="button" data-bs-target="#dateCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <div class="carousel-inner" role="tablist">
          <% @dates.each_slice(3).each do |date| %>
            <div class="carousel-item <%= date.include?(Date.today) ? 'active' : '' %>">
              <% date.each do |d| %>
                <div
                  class="date-item w-100 <%= d == Date.today ? 'active' : '' %>"
                  data-bs-toggle="tab"
                  data-bs-target="#nav-<%= d %>"
                  type="button"
                  role="tab">
                  <span class="d-block h5 text-center">
                    <%= 'Today, ' if d == Date.today %>
                    <%= 'Tomorrow, ' if d == Date.today + 1 %>
                    <%= d.strftime("%a, #{d.day.ordinalize}") %>
                  </span>
                  <span class="d-block text-center text-secondary"><%= d.strftime("%b") %></span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-next" type="button" data-bs-target="#dateCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </section>

    <section class="my-5">
      <h6 class="fw-semibold">
        <%= image_tag 'clock.svg' %>
        <span class="h-100 px-2 align-baseline">
        Select a time for <span data-appointment-target="selectedDate" class="text-primary"></span>
      </span>
      </h6>
      <div class="tab-content">
        <% @dates.each do |date| %>
          <div id="nav-<%= date %>" class="tab-pane fade <%= date == Date.today ? 'show active' : '' %>" role="tabpanel">
            <div class="grid gap-2 my-5">
              <% @times[date].each_with_index do |time, i| %>
                <%= form.radio_button :date_time, time[:time], class: "btn-check", checked: i == 0 %>
                <%= form.label "date_time_#{time[:time].to_s.gsub(' ', '_').gsub(':', '').downcase}",
                               time[:time].strftime("%I:%M %p"),
                               class: "g-col-6 g-col-sm-4 btn btn-outline-primary #{i == 0 ? 'active' : ''}"
                %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <section class="my-5 py-5">
      <small class="d-block m-auto text-center">Due to high demand, it is difficult to reschedule appointments.
        Please
        book
        your slot carefully!</small>
      <%= form.submit "Book Appointment", class: "mt-3 btn btn-lg btn-info text-light w-100 p-3 rounded-3" %>
    </section>
  <% end %>
</div>