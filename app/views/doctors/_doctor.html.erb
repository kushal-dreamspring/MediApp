<div id="<%= dom_id doctor %>" class="g-col-12 g-col-md-6 doctor-card bg-white">
  <div class="row mb-3">
    <div class="col-3 mx-auto px-auto">
      <%= image_tag doctor.image, class: 'doctor-image mx-auto', size: '75' %>
    </div>
    <div class="col-9 d-flex flex-column justify-content-center px-3 px-md-0">
      <p class="fw-bold mb-2">
        <%= doctor.name %>
      </p>
      <h6 class="text-secondary mb-0">
        <%= doctor.address %>
      </h6>
    </div>
  </div>
  <div class="row justify-content-between">
    <div class="col-6 col-md-7 pe-0 d-flex flex-column justify-content-center">
      <p class="small mb-0"><span class="text-success fw-semibold"><%= t('next_available') %></span> -
        <%= @next_appointment[doctor.id].strftime(@next_appointment[doctor.id].today? ? "%I:%M %p" :"%b %d, %I:%M %p") %>
      </p>
    </div>
    <div class="col-6 col-md-5 d-flex justify-content-end">
      <%= link_to t('book_visit'), new_appointment_path(doctor_id: doctor), class: "btn btn-primary" %>
    </div>
  </div>
</div>
