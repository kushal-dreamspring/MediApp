<div id="new_user">
  <%= form_with(model: @user, url: '/login') do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@user.errors.count, "error") %> <%= t('prohibited_this_appointment_from_being_saved') %></h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="user-form active mx-auto">
      <h4 class="h4 text-center fw-bold my-3"><%= t('login') %></h4>

      <div class="mb-3">
        <%= form.label :email, style: "display: block", class: "text-dark fw-semibold mb-1" %>
        <%= form.email_field :email, type: :email, class: "form-control form-control-lg",
                             placeholder: t('enter_email'), required: true,
                             pattern: "^[\w+\-.]+@[a-z\d\-.]+\.[a-z]+$",
                             oninvalid: "this.setCustomValidity('Name can only contain letters and spaces')",
                             onchange: "this.setCustomValidity('')" %>
      </div>

      <div class="mb-3">
        <%= form.button t('login'),
                        type: "submit",
                        class: "mt-3 btn btn-lg btn-primary text-white w-100 p-3 py-2 rounded-2"
        %>
      </div>
    </div>
  <% end %>
</div>